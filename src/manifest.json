{
  "name": "Beta Task Toggler",
  "description": "An extension for showing, hiding, randomizing tasks on programming.in.th | Î²",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["https://beta.programming.in.th/tasks"],
  "options_page": "options.html",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/icon16.png",
      "32": "./images/icon32.png",
      "48": "./images/icon48.png",
      "128": "./images/icon128.png"
    }
  },
  "icons": {
    "16": "./images/icon16.png",
    "32": "./images/icon32.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  }
}
